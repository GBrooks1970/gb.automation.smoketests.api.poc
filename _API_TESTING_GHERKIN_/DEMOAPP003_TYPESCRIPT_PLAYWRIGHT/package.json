    "start": "npm run api:start",
    "api:start": "tokenparser-api-shared",
    "ts:check": "tsc --project tsconfig.json --noEmit",
    "lint": "eslint \"src/**/*.{ts,tsx}\" \"screenplay/**/*.ts\" \"features/**/*.ts\"",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --check \"src/**/*.ts\" \"screenplay/**/*.ts\" \"features/**/*.ts\"",
    "format:fix": "prettier --write \"src/**/*.ts\" \"screenplay/**/*.ts\" \"features/**/*.ts\"",
    "test:bdd": "node tooling/run-cucumber-with-summary.cjs",
    "test": "npm run test:bdd",
    "verify": "npm run ts:check && npm run test:bdd",
    "pw:test": "playwright test --config tooling/playwright.config.ts",
    "pw:install": "playwright install --with-deps"
  },
