{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "lib": ["ES2022"],
    "rootDir": ".",
    "noImplicitThis": false,
    "allowJs": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types",
      "../../packages/tokenparser-api-shared/node_modules/@types",
      "../../node_modules/@types"
    ],
    "types": ["node"],
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {}
  },
  "include": [
    "features/**/*.ts",
    "screenplay/**/*.ts",
    "tooling/**/*.ts",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
